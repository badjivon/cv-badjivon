:ruby
  current_page = local_assigns.fetch :current, ""
  
  portfolio =   { name: "Projects", 
                  icon: "code", 
                  link: "projects" }
  experiences = { name: "Experience",
                  icon: "laptop",
                  link: "experiences" }
  brice =       { name: "badjivon",
                  icon: "circle-user",
                  link: "/" }
  links =       { name: "Links",
                  icon: "link",
                  link: "links" }
  updates =    {  name: "Updates",
                  icon: "compact-disc",
                  link: "updates" }

  sections = [brice, portfolio, experiences, links]
   
.w-full.flex.content-center
  .border-2.menubar.p-2
    .flex
      - sections.each do |section|
        = link_to section[:link] do
          .px-6.text-s
            %i.fa.mr-2{class: "fa-#{section[:icon]}"}
            %span{ class: [("underline underline-offset-4" if current_page == section[:link])] }
              = section[:name]
      = "-"
      %i.text-s.fa-solid.fa-circle-half-stroke.mt-1.px-6{"x-on:click" => "light = !light"}
        
